@model ToDoLists.Models.TodoList

@{
    ViewBag.Title = "Record";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title>Новая запись</title>
</head>
<body>
    <h2 class="text-center">ToDoList</h2>
    <hr />
        <div class="success">
        @using (Html.BeginForm())
            {
            <p>Название задачи:</p>
            <p>@Html.TextBoxFor(model => model.Task_name, new { @class = "form-control" })</p>
            <p>Срок выполнения:</p>
            <p>@Html.TextBoxFor(model => model.Target_date, new { @class = "form-control" })</p>
            <p>Сложность:</p>
            <p>@Html.TextBoxFor(model => model.Complexity, new { @class = "form-control" })</p>
            <hr />
            <div>
                <input class="btn btn-primary" type="submit" value="Добавить" /> |
                @Html.ActionLink("На главную", "Index")
           </div>
            }
        </div>

</body>
</html>